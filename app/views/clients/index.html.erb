<h1>Listing Clients <%= link_to 'New Client', new_client_path, :class => "btn btn-primary", :style => "color:white; float:right" %></h1>

<table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Site URL</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td>
            <%= frankie_in_place client, :name %>
          </td>
          <td>
            <%= frankie_in_place client, :email %>
          </td>
          <td>
            <%= frankie_in_place client, :site_url %>
          </td>
          <td>
            <%= render :partial => 'layouts/btn_group', :locals => {:instance => client, :buttons => ["Info", "Edit", "Delete"]} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<br>

